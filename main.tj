            font-size: 10pt;
        }
    }

    // Main section
    main: {
        // List (ordered list)
        ol: {
            type: letter E;
            li: {
                content: "Tjakra's Special Properties";
                font-weight: bold;

                section: {
                    content: "The following is a table listing Tjakra's Special Properties:";
                    // Table
                    table: {
                        tr: {
                            th: {
                                content: "{b: Property}";
                                text-align: center;
                                width: 20%;
                            }
                            th: {
                                content: "{b: Explanation}";
                                text-align: center;
                            }
                        }
                        tr: {
                            td: {
                                content: "papersize";
                                text-align: center;
                            }
                            td: {
                                content: "To determine the paper size (used in the config element) (letter, legal, tabloid, ledger, A0, A1, A2, A3, A4, A5, A6, or custom paper sizes in inches (e.g., "8.27*12.99", "[width][height]"))";
